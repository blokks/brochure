{
	"presets": [
		["env", {
			"targets": {
				"browsers": ["last 2 versions", "safari >= 7"]
            },
        }],
        "stage-2"
	],

	"plugins": [
        "babel-plugin-transform-runtime",
        "transform-decorators-legacy",
        [
            "module-resolver",
            {
                "alias": {
                    "app": "./src/scripts/app"
                }
            }
        ]
    ]
}

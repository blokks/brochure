{
    "extends": "airbnb",
    "parser": "babel-eslint",
    "env": {
        "browser": true,
    },
    "globals": {
        "$": true,
        "campaign": true,
        "browserSync": true,
        "document": true,
        "foo": true,
        "referrer": true,
        "tag": true,
        "window": true,
    },
    "plugins": [
        "compat"
    ],
    "rules": {
        "class-methods-use-this": 0,
        "compat/compat": 2,
        "import/no-extraneous-dependencies": 0,
        "indent": [2, 4],
        "max-len": 0,
        "no-param-reassign": 0,
        "no-shadow": 0,
        "no-underscore-dangle": 1,
        "strict": 0,
    },
    "settings": {
        "targets": ['chrome >= 50', 'firefox', 'edge', 'safari >= 9'],
        "polyfills": ['simd', 'fetch'],
        "coverage": false,
        "compiler": 'babel'
    }
}
